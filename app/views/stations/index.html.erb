<p id="notice"><%= notice %></p>

<div class="jumbotron text-center"><h2>Le Stazioni di BeMIsecure</h2></div>

<table>
  <thead>
    <tr>
      <th>Latitudine</th>
      <th>Longitudine</th>
      <th>Indirizzo</th>
      <th>Numero_catene</th>
      <th>Numero_stazione</th>
      <th>Catene_libere</th>
      <th>Nome_stazione</th>
      <th>Lucchetti</th>
      <th>Livello_sicurezza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.lat %></td>
        <td><%= station.long %></td>
        <td><%= station.address %></td>
        <td><%= station.number_chains %></td>
        <td><%= station.station_number %></td>
        <td><%= station.free_chains %></td>
        <td><%= station.station_name %></td>
        <td><%= station.lockers %></td>
        <td><%= station.security %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuova Stazione', new_station_path %>

<div id="leafletMap"></div>

  <%= javascript_tag do %>
    var leafletMap= L.map('leafletMap').setView([51.505,-0.09], 9);
    L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          maxZoom: 19,
          attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
        }).addTo(leafletMap);
    // icon 
    var greenIcon= L.icon({
    iconUrl: '<%= asset_path "rails.png" %>',
    iconSize: [86, 58], // size1 of the icon
    iconAnchor: [8, 18], // point of the icon which will correspond to marker's location
    popupAnchor: [0, 0] // point from which the popup should open relative to the iconAnchor
        });
    var marker= new Array();
      <% @stations.each_with_index do |station,counter| %>
        marker[<%=counter%>] = L.marker([<%= station.lat %>,<%= station.long %>], {icon: greenIcon}).addTo(leafletMap);
        marker[<%=counter%>].bindPopup('<%= station.station_name %>');
       <% end %>
   <% end %>
   